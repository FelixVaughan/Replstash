// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "tsc: build",
        "type": "shell",
        "command": "tsc",
        "args": ["-p", "."],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$tsc"],
        "runOptions": {
          "runOn": "folderOpen"
        }
      },
      {
        "label": "tsc: watch",
        "type": "shell",
        "command": "tsc",
        "args": ["--watch", "-p", "."],
        "isBackground": true,
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$tsc-watch"]
      } 
    ]
  }
  